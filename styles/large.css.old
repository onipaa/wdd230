
/* ****************************************************************************
  My imports and top level schtuff
**************************************************************************** */
@import url('https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,200;0,300;0,400;1,200&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,200;0,300;0,400;1,200&family=Roboto:ital,wght@0,100;0,300;0,400;1,300&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,300;0,400;1,100;1,300&family=Newsreader:ital,wght@0,200;0,300;0,400;1,200&family=Roboto:ital,wght@0,100;0,300;0,400;1,300&display=swap');

@media only screen and (min-width: 1024px) {
body {
    max-width: 1024px;
    margin: auto;
}

#container {
    display: grid;
    grid-template-columns: repeat( 8, 128px );
    grid-template-rows: repeat( 10, 128px );
    font-family: Montserrat;
}

hr {
    visibility: visible;
    border: 1px solid #004888;
    width: 1024px;
}
/* ****************************************************************************
  My Banner 
**************************************************************************** */
.banner {
    display: grid;
    grid-column: 1/9;
    grid-row: 1/2;
    background-color: #004888;
    border-radius: 25px;
    z-index: 0;
    box-shadow: 0 5px 5px #012567;
}

.banner .myMug {
    display: grid;
    grid-column: 1/3;
    grid-row: 1/2;
    width: 256px;
    z-index: 1;
}

.myMug img {
    width: 200px;
    /* height: 256px; according to Jason, we NEVER set the height */
    justify-self: center;
    align-self: center;
    filter: drop-shadow(0 0 0.75rem rgb(254, 254, 211));
}

.banner .myName {
    display: grid;
    grid-column: 3/9;
    grid-row: 1/2;
    font-family: Montserrat;
    justify-content: left;
    align-content: center;
}

.banner .myName a {
  text-decoration: none;
}

.banner .myName h1 {
    display: grid;
    text-align: left;
    color: white;
    font-family: 'Roboto', sans-serif;
    font-size: 64px;
    align-self: center;
    justify-self: left;
    z-index: 99;
    text-shadow: 2px 2px 4px black;
}
/* ****************************************************************************
My Assignment List
**************************************************************************** */
.exercises {
    display: grid;
    grid-column: 1/9;
}

.exercises li {
    text-align: left;
    font-family: 'Roboto Mono', Courier, monospace;
}

.exercises h1 {
    font-family: 'Roboto Mono', Courier, monospace;
    font-size: 32px;
    font-weight: 700;
    text-shadow: 3px 3px 3px rgb(0 0 0 / 0.4);
    text-align:left;
    margin-bottom: 0px;
    padding-bottom: 0px;
  }

/* I had 1.5 seconds and it gave me anxiety. It felt spastic. So, I slowed it down.*/
.exercises p {
    font-family: 'Roboto', sans-serif;
    text-align: left;
    font-style: italic;
    animation: animate 5s linear infinite;
}

@keyframes animate {
      0% { opacity: 0; }
     50% { opacity: 0.7; }
    100% { opacity: 0; }  
}
/* ****************************************************************************
My Footer
**************************************************************************** */ 
.footer-container {
    display: grid;
    grid-column: 1/9;
    grid-row: 9/10;
    height: 128px;
    width: 1024px;
    background: #004888;
    align-items: center;
    justify-content: center;
    border-radius: 25px;
    box-shadow: 0 5px 5px #012567;
}

.footer-content {
    padding: 10px;
    width: 100%;
}
  
.footer-content h1 {
    color: white;
    text-align: center;
    font-size: 24px;
    font-family: 'Roboto';
    filter: drop-shadow( 3px 5px 2px #012567);
}

.footer-content p {
    font-family: 'Roboto';
    color: #CCFF00;
    text-align: center;
}
}